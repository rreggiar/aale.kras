  mutate(origin = ifelse(grepl('^TCGA', patient.id), 'TCGA', 'plasma')) %>% 
  #filter(origin == 'TCGA') %>% 
  #filter(log2FoldChange > 4) %>% 
  #filter(gene %in% lnc.rna.names$gene) %>% 
  group_by(gene) %>% 
