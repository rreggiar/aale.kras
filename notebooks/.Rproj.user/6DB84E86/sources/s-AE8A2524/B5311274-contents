  gather(patient, counts, -gene) %>% 
  mutate(condition = ifelse(grepl('^ctrl', patient), 
                                'ctrl.plasma', 'panc.plasma')) %>% 
  bind_rows(gtex.salmon.ready.counts) %>% 
  bind_rows(select(filter(tcga.paad.norm.counts.de.seq.norm.plasma,
                          origin != 'plasma'),
                   patient = 'patient.id', 
                   gene,
