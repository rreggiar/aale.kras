te.group.1.de.seq <- 
  read_csv('data/10.6.7.5.te.multi.var.panc.vs.ctrl.de.seq.csv') %>% 
  filter(padj < 0.01) %>% 
  rename(gene = 'X1') %>% 
  filter(! gene %in% c(hb.txs$gene.name, 
                       chr.Y.genes$gene.name, 
                       chrM.txs$gene.name),
         ! grepl(')n', gene), 
         ! grepl('-rich', gene)) %>% 
